<div class="container" id="sign-up-form">
  <div class="row align-items-center flex-column">
    <h1>Placeholder Title</h1>
    <h3>Create, study, accomplish goals together</h3>

    <div class="col-sm-12 col-md-4">
      <h3 class="text-center">Sign up <small>it's free!</small></h3> 

        <%= bootstrap_form_for(resource, 
                       :as => resource_name, 
                       :url => registration_path(resource_name)) do |f| %>

          <%= f.text_field :first_name, 
                            placeholder: 'username (will be shown publicly)', 
                            class: 'form-control' %>
          
          <%= f.text_field :last_name, 
                            placeholder: 'username (will be shown publicly)', 
                            class: 'form-control' %>

          <%= f.text_field :email, 
                            placeholder: 'email', 
                            class: 'form-control' %>

          <%= f.password_field :password, 
                                placeholder: 'password', 
                                class: 'form-control' %>

          <%= f.password_field :password_confirmation, 
                                placeholder: 'password confirmation', 
                                class: 'form-control' %>
                            
        <%= f.submit 'Sign up', class: 'btn sign-up-button' %>
      <% end %>
		
    </div>
  </div>
</div>